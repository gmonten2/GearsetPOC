<?xml version="1.0" encoding="UTF-8"?>
<CustomApplication xmlns="http://soap.sforce.com/2006/04/metadata">
    <brand>
        <headerColor>#0070D2</headerColor>
        <shouldOverrideOrgTheme>false</shouldOverrideOrgTheme>
    </brand>
    <description>Custom admissions console, so that one can easily work through multiple applications on a single window</description>
    <formFactors>Small</formFactors>
    <formFactors>Large</formFactors>
    <isNavAutoTempTabsDisabled>false</isNavAutoTempTabsDisabled>
    <isNavPersonalizationDisabled>false</isNavPersonalizationDisabled>
    <isNavTabPersistenceDisabled>false</isNavTabPersistenceDisabled>
    <isOmniPinnedViewEnabled>false</isOmniPinnedViewEnabled>
    <label>Admissions and Recruiting Console</label>
    <navType>Console</navType>
    <tabs>standard-home</tabs>
    <tabs>standard-Account</tabs>
    <tabs>standard-Contact</tabs>
    <tabs>standard-Opportunity</tabs>
    <tabs>standard-Lead</tabs>
    <tabs>standard-Task</tabs>
    <tabs>standard-Event</tabs>
    <tabs>hed__Application__c</tabs>
    <tabs>traa_Employment_History__c</tabs>
    <tabs>traa_Reviewer_Notes__c</tabs>
    <uiType>Lightning</uiType>
    <workspaceConfig>
        <mappings>
            <fieldName>hed__Applicant__c</fieldName>
            <tab>hed__Application__c</tab>
        </mappings>
        <mappings>
            <fieldName>hed__Primary_Contact__c</fieldName>
            <tab>standard-Account</tab>
        </mappings>
        <mappings>
            <fieldName>AccountId</fieldName>
            <tab>standard-Contact</tab>
        </mappings>
        <mappings>
            <fieldName>WhoId</fieldName>
            <tab>standard-Event</tab>
        </mappings>
        <mappings>
            <fieldName>IndividualId</fieldName>
            <tab>standard-Lead</tab>
        </mappings>
        <mappings>
            <fieldName>traa_Academic_Program__c</fieldName>
            <tab>standard-Opportunity</tab>
        </mappings>
        <mappings>
            <fieldName>WhoId</fieldName>
            <tab>standard-Task</tab>
        </mappings>
        <mappings>
            <tab>standard-home</tab>
        </mappings>
        <mappings>
            <tab>traa_Employment_History__c</tab>
        </mappings>
        <mappings>
            <tab>traa_Reviewer_Notes__c</tab>
        </mappings>
    </workspaceConfig>
</CustomApplication>

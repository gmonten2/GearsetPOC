<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Screen Flow to be placed on Blackthorn Event page to easily create a synced Campaign
v3: add exist instructions and change button label
v4-7: added fault message</description>
    <environments>Default</environments>
    <formulas>
        <description>formula to use EVent Name to populate Campaign Name</description>
        <name>fx_CampaignName</name>
        <dataType>String</dataType>
        <expression>{!recordId.Name} &amp; &quot; Campaign&quot;</expression>
    </formulas>
    <formulas>
        <name>lengthCount</name>
        <dataType>Number</dataType>
        <expression>    LEN({!Campaign_Name})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>lengthCount_solution</name>
        <dataType>Number</dataType>
        <expression>{!lengthCount} - 80</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>ScrnFlow Create Campaign from Event {!$Flow.CurrentDateTime}</interviewLabel>
    <label>ScrnFlow Create Campaign from Event</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>Flow</processType>
    <recordCreates>
        <name>Create_Campaign</name>
        <label>Create Campaign</label>
        <locationX>176</locationX>
        <locationY>242</locationY>

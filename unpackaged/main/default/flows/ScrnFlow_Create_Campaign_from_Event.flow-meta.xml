    <screens>
        <description>Screen flow to collect key campaign details</description>
        <name>Enter_Campaign_Details</name>
        <label>Enter Campaign Details</label>
        <locationX>176</locationX>
        <locationY>134</locationY>
        <allowBack>false</allowBack>
        <allowFinish>true</allowFinish>
        <allowPause>false</allowPause>
        <connector>
            <targetReference>Create_Campaign</targetReference>
        </connector>
        <fields>
            <name>Exit_Instructions</name>
            <fieldText>&lt;p&gt;&lt;em style=&quot;color: rgb(234, 27, 27);&quot;&gt;Click the &#39;x&#39; in the top right corner if you want to cancel this process.&lt;/em&gt;&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
            <styleProperties>
                <verticalAlignment>
                    <stringValue>top</stringValue>
                </verticalAlignment>
                <width>
                    <stringValue>12</stringValue>
                </width>
            </styleProperties>
        </fields>
        <fields>
            <name>Campaign_Name</name>
            <dataType>String</dataType>
            <defaultValue>
                <elementReference>fx_CampaignName</elementReference>
            </defaultValue>
            <fieldText>Campaign Name</fieldText>

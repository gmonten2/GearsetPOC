<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>conference360__Force_a_Payment_Gateway_PayPal</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    ISBLANK (conference360__Payment_Gateway_PayPal__c),
    INCLUDES(
        conference360__Event_Settings__r.conference360__Enabled_Payment_Methods__c, &quot;PayPal&quot;)
)</errorConditionFormula>
    <errorDisplayField>conference360__Payment_Gateway_PayPal__c</errorDisplayField>
    <errorMessage>Please select a valid Payment Gateway (PayPal).</errorMessage>
</ValidationRule>
